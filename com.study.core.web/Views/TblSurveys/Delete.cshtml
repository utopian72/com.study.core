@model com.study.core.model.TblSurvey

@{
    ViewData["Title"] = "조사";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"] </h1>


<h3>조사를 삭제하시겠습니까?</h3>

<div class="text-right">
    <a asp-action="Index" asp-controller="TblSurveys" class="btn btn-sm btn-primary">목록</a>
</div>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurveyYear)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SurveyNo" />
        <input type="submit" value="삭제" class="btn btn-danger" />
    </form>
</div>
